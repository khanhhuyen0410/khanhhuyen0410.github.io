<svg width="400" height="240" viewBox="0 0 400 240" fill="none" xmlns="http://www.w3.org/2000/svg">
  <!-- Background -->
  <rect width="400" height="240" fill="url(#nodeGradient)"/>
  
  <!-- Node.js Logo -->
  <g transform="translate(180, 80)">
    <!-- Node.js Hexagon -->
    <path d="M20 0L35 10L35 30L20 40L5 30L5 10Z" fill="#339933"/>
    <path d="M20 0L35 10L35 30L20 40V0Z" fill="#2D7A2D"/>
  </g>
  
  <!-- Microservices Architecture -->
  <g opacity="0.7">
    <!-- Service Boxes -->
    <rect x="80" y="60" width="30" height="20" fill="rgba(255,255,255,0.3)" rx="3"/>
    <rect x="290" y="60" width="30" height="20" fill="rgba(255,255,255,0.3)" rx="3"/>
    <rect x="80" y="160" width="30" height="20" fill="rgba(255,255,255,0.3)" rx="3"/>
    <rect x="290" y="160" width="30" height="20" fill="rgba(255,255,255,0.3)" rx="3"/>
    
    <!-- Connection Lines -->
    <line x1="110" y1="70" x2="180" y2="90" stroke="rgba(255,255,255,0.5)" stroke-width="2"/>
    <line x1="220" y1="90" x2="290" y2="70" stroke="rgba(255,255,255,0.5)" stroke-width="2"/>
    <line x1="110" y1="170" x2="180" y2="110" stroke="rgba(255,255,255,0.5)" stroke-width="2"/>
    <line x1="220" y1="110" x2="290" y2="170" stroke="rgba(255,255,255,0.5)" stroke-width="2"/>
    
    <!-- Service Labels -->
    <text x="95" y="75" text-anchor="middle" fill="rgba(255,255,255,0.8)" font-size="8" font-family="Arial">API</text>
    <text x="305" y="75" text-anchor="middle" fill="rgba(255,255,255,0.8)" font-size="8" font-family="Arial">AUTH</text>
    <text x="95" y="175" text-anchor="middle" fill="rgba(255,255,255,0.8)" font-size="8" font-family="Arial">DB</text>
    <text x="305" y="175" text-anchor="middle" fill="rgba(255,255,255,0.8)" font-size="8" font-family="Arial">CACHE</text>
  </g>
  
  <!-- Text -->
  <text x="200" y="210" text-anchor="middle" fill="rgba(255,255,255,0.9)" font-size="16" font-weight="bold" font-family="Arial">Node.js Microservices</text>
  
  <!-- Gradient Definition -->
  <defs>
    <linearGradient id="nodeGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#339933;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#2D7A2D;stop-opacity:1" />
    </linearGradient>
  </defs>
</svg>
